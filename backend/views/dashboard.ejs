<!DOCTYPE html>
<html lang="en">
  <%- include("includes/head.ejs") %>
  <body>
    <%- include("includes/header.ejs") %>
    <main>
      <!-- Dashboard Header -->
      <header style="text-align: center; margin: 2rem 0">
        <h1>Tuesday, December 17</h1>
        <h2>Good evening, Mohammad</h2>
        <div style="margin-top: 1rem">
          <span>My week â–¼</span>
          <span> | </span>
          <span>0 tasks completed</span>
          <span> | </span>
          <span>0 collaborators</span>
        </div>
      </header>

      <!-- Main Dashboard Content -->
      <section
        class="grid-container"
        style="
          display: grid;
          grid-template-columns: 1fr;
          gap: 2rem;
          padding: 1rem;
        "
      >
        <!-- Tasks Section -->
        <article
          class="card"
          style="
            border-radius: 8px;
            padding: 1rem;
            background-color: #f4f4f9;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
          "
        >
          <h2>My Tasks</h2>
          <div>
            <button class="button">+ Create Task</button>
            <ul class="task-list" style="list-style: none; padding: 0">
              <li
                class="task-item"
                style="
                  margin: 0.5rem 0;
                  padding: 0.5rem;
                  border-radius: 4px;
                  background-color: #fff;
                  border: 1px solid #ccc;
                "
              >
                Test Cases <span style="float: right">Digital Twin</span>
              </li>
            </ul>
          </div>
        </article>

        <!-- Projects Section -->
        <section
          class="card"
          style="
            border-radius: 8px;
            padding: 1rem;
            background-color: #f4f4f9;
            margin-bottom: 2rem;
          "
        >
          <h2>Projects</h2>
          <a href="/addProjects"> Create Project</a>
          <ul class="project-list" style="list-style: none; padding: 0">
            <% projects.forEach(project => { %>
            <li
              class="project-item"
              style="
                margin: 0.5rem 0;
                padding: 0.5rem;
                border-radius: 4px;
                background-color: #fff;
                border: 1px solid #ccc;
              "
            >
              <span><%= project.name %></span>
              <!-- Render the project name -->
            </li>
            <% }) %>
          </ul>
        </section>

        <!-- People Section -->
        <section
          class="card"
          style="border-radius: 8px; padding: 1rem; background-color: #f4f4f9"
        >
          <h2>People</h2>
          <button class="button" style="margin: 0.5rem 0">+ Invite</button>
          <ul class="people-list" style="list-style: none; padding: 0">
            <li
              class="people-item"
              style="
                margin: 0.5rem 0;
                padding: 0.5rem;
                border-radius: 4px;
                background-color: #fff;
                border: 1px solid #ccc;
              "
            >
              <span>Branko Roknic</span>
            </li>
          </ul>
        </section>
      </section>
    </main>
    <%- include("includes/footer.ejs") %>
  </body>
</html>
